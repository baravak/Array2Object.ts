{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2022",
    "lib": ["es6"],
    "module": "commonjs",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  }
}
